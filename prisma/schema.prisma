model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  username   String?
  password   String
  role       Role?        @relation(fields: [roleLevel], references: [level])
  roleLevel  String?
  ReportData ReportData[]
}

model Role {
  id    Int    @id @default(autoincrement())
  level String @unique
  User  User[]
}

model ReportData {
  id          Int    @id @default(autoincrement())
  subject     String
  description String
  file        String
  username    User   @relation(fields: [userId], references: [id])
  userId      Int
}
